<h1><%= "#{current_user.username}" %>(ID<%= current_user.id %>)さんのプロフィールページ</h1>

<% if flash[:notice_chabge_profile] %>
 <p class="notice"><%= flash[:notice_chabge_profile] %></p>
<% end %>

<table>
 <tr>
  <th>アイコン画像</th>
  <td>
   <% if current_user.user_img.present? %>
   <%= image_tag("user_images/#{current_user.user_img}") %>
    <% else %>
    <%= image_tag "account_icon.png", size: "40x40" %>
   <% end %>
  </td>
 </tr>

 <tr>
  <th>名前</th>
  <td><%= "#{current_user.username}" %></td>
 </tr>

 <tr>
  <th>自己紹介</th>
  <td><%= "#{current_user.introduction}" %></td>
 </tr>
</table>

<p><%= link_to "プロフィール情報を編集する", edit_user_path(current_user) %></p>

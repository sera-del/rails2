
<h3>新規登録</h3>

<%= render "shared/error", obj: @room %>

<%= form_with model: @room do |f| %>
 <table>
  <tr>
   <th><%= f.label :accommodation, "施設名" %></th>
   <td><%= f.text_field :accommodation %></td>
  </tr>
  
  <tr>
   <th><%= f.label :accommodation_detail, "施設詳細" %></th>
   <td><%= f.text_area :accommodation_detail, size: "50x5" %></td>
  </tr>

  <tr>
   <th><%= f.label :price, "料金" %></th>
   <td><%= f.number_field :price %></td>
  </tr>

  <tr>
   <th><%= f.label :address, "住所" %></th>
   <td><%= f.text_field :address %></td>
  </tr>

  <tr>
   <th><%= f.label :img, "施設画像" %></th>
   <td><%= f.file_field :img %></td>
  </tr>
 </table>


 <div>
  <p><%= f.submit "保存", class: "actions_button" %></p>
  <p><%= link_to "キャンセル", root_path, class: "logIn_signUp" %></p>
 </div>

<% end %>
